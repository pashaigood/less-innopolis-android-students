<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="innopolis.less.registration">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activites.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activites.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:parentActivityName=".activites.LoginActivity" />
        <activity
            android:name=".activites.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true" />
        <activity
            android:name=".activites.GroupsActivity"
            android:label="@string/title_activity_groups" />
        <activity
            android:name=".activites.StudentActivity"
            android:label="@string/title_activity_student"
            android:parentActivityName=".activites.GroupsActivity" />
        <activity
            android:name=".activites.AdminActivity"
            android:label="@string/title_activity_admin" />
        <activity
            android:parentActivityName=".activites.AdminActivity"
            android:name=".activites.AdminListActivity"
            android:launchMode="singleTask"/>
    </application>

</manifest>